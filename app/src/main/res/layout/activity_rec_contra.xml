<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo_rc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:src="@mipmap/ic_launcher_foreground" />

        <!-- Nombre de la App -->
        <TextView
            android:id="@+id/tv_NombreApp_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/app_name"
            android:textColor="#1B1A1A"
            android:textSize="28sp" />

        <!-- Mensaje instructivo -->
        <TextView
            android:id="@+id/tv_Mensaje_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="32dp"
            android:gravity="center"
            android:text="@string/ingresar_correo"
            android:textColor="#1B1A1A"
            android:textSize="16sp" />

        <!-- Campo correo -->
        <EditText
            android:id="@+id/et_user_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/edittext_borde"
            android:hint="@string/correo_electr_nico"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Botón Recuperar contraseña -->
        <Button
            android:id="@+id/btn_recContrase_rc"
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_outlined_red"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/recuperarcontraseña"
            android:textColor="@color/naranja"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>
