<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_logo_rc"
            android:layout_width="137dp"
            android:layout_height="141dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/tv_NombreApp_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_Mensaje_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/mensaje2"
            android:textAlignment="center"
            android:textColor="#1B1A1A"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/et_user_rc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_borde"
                android:hint="@string/usuario"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iv_password_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_password"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/et_password_rc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_borde"
                android:hint="@string/contraseña"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ingresar_rc"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_outlined_red"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/ingresar"
            android:textColor="@color/naranja"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iv_google_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_google"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_ingresaConGoogle_rc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_outlined_red"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:text="@string/ingresa_con_google"
                android:textColor="@color/naranja"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_RecupCont_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/recuperarcontraseña"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_NoTienesCuenta_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta?"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_alternates_bold" />

            <TextView
                android:id="@+id/tv_Registrate_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registrate"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:layout_marginStart="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
