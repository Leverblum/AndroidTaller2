<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_logo_rg"
            android:layout_width="163dp"
            android:layout_height="106dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_NombreApp_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/app_name"
            android:textColor="#1B1A1A"
            android:textSize="28sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_Mensaje_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completa_datos"
            android:textSize="16sp"
            android:textColor="#1B1A1A"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_user_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/nombres_rg"
            android:background="@drawable/edittext_borde"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_apellidos_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/apellidos_rg"
            android:background="@drawable/edittext_borde"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_correo_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/correo_electronico_rg"
            android:background="@drawable/edittext_borde"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_telefono_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/telefono_rg"
            android:background="@drawable/edittext_borde"
            android:padding="12dp"
            android:inputType="phone"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_contraseña_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/contrasea_rg"
            android:background="@drawable/edittext_borde"
            android:padding="12dp"
            android:inputType="textPassword"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_repetir_contraseña_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/repetir_contrasea_rg"
            android:background="@drawable/edittext_borde"
            android:padding="12dp"
            android:inputType="textPassword"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginTop="12dp" />

        <CheckBox
            android:id="@+id/cb_terminos_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terminos_y_condiciones_rg"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:textColor="#1B1A1A"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvLoginRedirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/ya_tienes_cuenta_inicia_sesion_rg"
            android:textColor="#F13F3B"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_registrate_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="@string/registrate"
            android:textColor="@color/naranja"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
